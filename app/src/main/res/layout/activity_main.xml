<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cv="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <com.todocompany.todocustomviews.ChronometerView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometerView"
        cv:circleColor="#ffffed3d"
        cv:fillingColor="#ff487cff"
        cv:timeRange="2"
        cv:fadingSpeed="30"





        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter how many seconds run"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etSeconds"
        android:layout_marginTop="10dp"
        android:hint="full time" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etDelay"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="delay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run!"
        android:id="@+id/btnRun"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvOnTick"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
